{
  "compilerOptions": {
      "moduleResolution": "node",
      "alwaysStrict": true,
      "declaration": true,
      "allowJs": true,
      "module": "es2015",
      "target": "ES5",
      "sourceMap": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      //dependencies lib version
      "lib": [
        "es5",
        "es2015",
        "dom",
        "scripthost"
      ],
      "outDir": "./dist/",
      "rootDir": "./src",
      "baseUrl": "./",
      //custom types
      "paths": {}
  },
  "include": [
      "./src/**/*.ts",
      "./src/**/*.d.ts",
  ]
}
